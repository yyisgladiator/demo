  description "Bundle multiple streams together. Each stream can be accessed using
    an identifier called Channel. Type-information is pertained"
  options [quick_and_dirty = false, browser_info, document = pdf,document_variants="outline=-lemma,-proof",document_tags="lemma%lemma"]
  sessions
    user
  theories
    Channel
    SB
    SB_fin
  document_files
    "root.tex"
  document_files (in "../")
    "MontiBelle.sty"


